{
    "lang": "ru",
    "charset": "utf-8",
    "lib_dir": "%BASE_DIR%/lib/php",
    "root":  "%DOCUMENT_ROOT%/uploads/sjFilemanager",
    "max_files_per_page": 30,
    //"allowed_actions": [],
    "uploader": {
        "max_size": "10000",
        "allowed_types": ["jpeg","gif","jpg","rar","png","doc","docx","ppt","pptx","xls","xlsx","mdb","accdb", "swf", "zip", "rtf", "pdf", "psd", "mp3", "wma", "flv", "mp4"],
        "dynamic_name": true,
        "override": false,
        "images": {
            "width": 500,
            "height": 500,
            // width, height, auto, percentage
            "type": "width",
            // left-top, left-bottom, center, right-top, right-bottom, custom {"x": 100, "y": 200}
            "crop": "left-top",
            // check image size before resing. If image size is less than config sizes
            // image will be not resized and saved as it is
            "check_size": true
        },
        "thumbs": {
